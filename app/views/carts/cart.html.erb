<h1>Your cart</h1>

<table>
    <tr>
        <th>Cover</th>
        <th>Title</th>
        <th>Author</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td><%= cl_image_tag book.cover.key, crop: :scale, width: 50, cloud_name: 'flynnwebdev' if book.cover.attached? %></td>
            <td><%= link_to book.title, book %></td>
            <td><%= book.author.full_name %></td>
        </tr>
    <% end %>
</table>

<%= link_to "Buy All!", checkout_buy_path %>